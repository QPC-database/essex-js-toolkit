{
	"name": "@essex-js-toolkit/dev",
	"version": "0.0.1",
	"description": "A set of packages for developers",
	"repository": "git@ssh.dev.azure.com:v3/msrp-essex/Alpha/alpha-developer",
	"author": "David Tittsworth <datittsw@microsoft.com>",
	"contributors": [
		"David Tittsworth <datittsw@microsoft.com>",
		"Nathan Evans <naevans@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>",
		"Amber Hoak <amhoak@microsoft.com>",
		"Eric Kimbrel <lekimbrel@gmail.com>"
	],
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">= 12.0",
		"pnpm": ">= 5"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"clean": "pnpm run clean --stream",
		"build": "pnpm run build -r --stream",
		"build_ci": "pnpm run build -r --stream",
		"unit_test": "essex test --coverage",
		"test_packages": "pnpm run test --stream",
		"test": "run-s test_packages unit_test",
		"lint": "essex lint --docs",
		"lint:fix": "essex lint -f",
		"git_is_clean": "essex git-is-clean",
		"prettify": "essex prettify",
		"release": "npm run build && lerna publish",
		"scripts:upgrade": "essex install",
		"start": "pnpm run start --stream",
		"ci": "run-s build lint test git_is_clean",
		"build-storybook": "pnpm run build-storybook --stream",
		"start-storybook": "pnpm run storybook --filter @essex-js-toolkit/theme-components-stories"
	},
	"devDependencies": {
		"@essex/eslint-config": "^9.1.2",
		"@essex/eslint-plugin": "^9.1.2",
		"@essex/prettier-config": "^9.1.2",
		"@essex/scripts": "^9.1.2",
		"@types/node": "^14.0.1",
		"debug": "^4.1.1",
		"husky": "^4.2.0",
		"lerna": "^3.20.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^3.7.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "essex pre-commit"
		}
	},
	"prettier": "@essex/prettier-config",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^3.4.0"
	},
	"resolutions": {
		"handlebars": "^4.4.3"
	}
}

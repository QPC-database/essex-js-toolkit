{
	"name": "@essex-js-toolkit/dev",
	"version": "0.0.1",
	"description": "A set of packages for developers",
	"repository": "git@ssh.dev.azure.com:v3/msrp-essex/Alpha/alpha-developer",
	"author": "David Tittsworth <datittsw@microsoft.com>",
	"contributors": [
		"David Tittsworth <datittsw@microsoft.com>",
		"Nathan Evans <naevans@microsoft.com>",
		"Chris Trevino <chtrevin@microsoft.com>",
		"Amber Hoak <amhoak@microsoft.com>",
		"Eric Kimbrel <lekimbrel@gmail.com>"
	],
	"license": "MIT",
	"private": true,
	"scripts": {
		"clean": "lerna run clean --stream",
		"build": "lerna run build --stream",
		"build_ci": "lerna run build --stream",
		"unit_test": "jest --coverage",
		"test_packages": "lerna run test --stream",
		"test": "run-s test_packages unit_test",
		"lint": "essex lint --docs",
		"lint:fix": "essex lint -f",
		"git_is_clean": "essex git-is-clean",
		"prettify": "essex prettify",
		"release": "npm run build && lerna publish",
		"scripts:upgrade": "essex install",
		"start": "lerna run start --stream",
		"ci": "run-s build lint test git_is_clean",
		"build-storybook": "lerna run build-storybook --stream"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.1",
		"@babel/core": "^7.10.2",
		"@babel/plugin-proposal-class-properties": "^7.10.1",
		"@babel/plugin-proposal-object-rest-spread": "^7.8.3",
		"@babel/plugin-proposal-optional-chaining": "^7.10.1",
		"@babel/preset-env": "^7.10.2",
		"@commitlint/cli": "^8.3.5",
		"@essex/eslint-config": "7.1.0",
		"@essex/eslint-plugin": "7.1.0",
		"@essex/prettier-config": "7.1.0",
		"@essex/scripts": "7.1.0",
		"@types/jest": "26.0.0",
		"@types/node": "^14.0.1",
		"commander": "^5.1.0",
		"crlf": "^1.1.1",
		"debug": "^4.1.1",
		"eslint-plugin-react": "^7.18.0",
		"husky": "^4.2.0",
		"jest": "^26.0.1",
		"lerna": "^3.20.2",
		"lint-staged": "^10.0.2",
		"npm-run-all": "^4.1.5",
		"ts-jest": "^26.0.0",
		"ts-node": "^8.6.2",
		"typescript": "^3.7.5"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"nohoist": [
			"@essex/themed-components-stories/**"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "essex pre-commit"
		}
	},
	"prettier": "@essex/prettier-config",
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^3.4.0"
	}
}
